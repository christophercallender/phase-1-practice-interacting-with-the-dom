let playing = !0;
let counter = document.getElementById('counter');
let counterText = parseInt(counter.innerText);
let interval = setInterval(() => {
   counter.innerText = counterTag + 1;
}, 1000);
let minus = document.getElementById('minus');
let plus = document.getElementById('plus');
let heart = document.getElementById('heart');
let pause = document.getElementById('pause');
let form = document.getElementsByTagName('form')[0];

function _toConsumableArray(a) {
   if (Array.isArray(a)) {
      for (var b = 0, c = Array(a.length); b < a.length; b++) c[b] = a[b];
      console.log(c);
      return c;
   }
   console.log(Array.from(a));
   return Array.from(a);
}

timer = setInterval(() => {
   counter.innerText = counterTag + 1;
}, 1000);

minus.addEventListener('click', function () {
   counter.innerText = counterTag - 1;
});

plus.addEventListener('click', function () {
   counter.innerText = counterTag + 1;
});

heart.addEventListener('click', function () {
   (c = document.querySelector('.likes')), (d = void 0);
   if (
      []
         .concat(_toConsumableArray(c.children))
         .map(function (a) {
            return parseInt(a.dataset.num);
         })
         .includes(counterTag)
   ) {
      d = document.querySelector('[data-num="' + counterTag + '"]');
      var e = parseInt(d.children[0].innerText);
      d.innerHTML = b + ' has been liked <span>' + (e + 1) + '</span> times';
   } else (d = document.createElement('li')).setAttribute('data-num', counterTag), (d.innerHTML = counterTag + ' has been liked '), c.appendChild(d);
});

pause.addEventListener('click', function () {
   playing
      ? ((playing = !1), clearInterval(interval), (this.innerText = 'resume'))
      : ((playing = !0), (interval = timer()), (this.innerText = 'pause')),
      []
         .concat(_toConsumableArray(document.getElementsByTagName('button')))
         .forEach(function (a) {
            'pause' !== a.id && (a.disabled = !playing);
         });
});

form.addEventListener('submit', function (a) {
   a.preventDefault();
   var b2 = this.children[0],
      c = b2.value;
   b2.value = '';
   var d = document.querySelector('.comments'),
      e = document.createElement('p');
   (e.innerText = c), d.appendChild(e);
});
